generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Sex {
  NOT_KNOWN
  MALE
  FEMALE
}

enum Level {
  BEGINNER
  ELEMENTARY
  INTERMEDIATE
  ADVANCED
}

enum Rule {
  SINGLES
  DOUBLES
}

model Activity {
  id           Int           @id @default(autoincrement())
  ownerId      String        @map("owner_id")
  placeId      Int           @map("place_id")
  createdAt    DateTime      @default(now()) @map("created_at")
  isOpen       Boolean
  owner        User          @relation(fields: [ownerId], references: [id])
  place        Place         @relation(fields: [placeId], references: [id])
  games        Game[]
  participants Participant[]

  @@map("activities")
}

model Participant {
  activityId Int      @map("activity_id")
  memberId   Int      @map("member_id")
  activity   Activity @relation(fields: [activityId], references: [id])
  member     Member   @relation(fields: [memberId], references: [id])
  Player     Player[]

  @@id(name: "id", [activityId, memberId])
  @@map("participants")
}

model Game {
  activityId  Int          @map("activity_id")
  gameNumber  Int          @default(autoincrement()) @map("game_number")
  createdAt   DateTime     @default(now()) @map("created_at")
  activity    Activity     @relation(fields: [activityId], references: [id])
  gameDetails GameDetail[]

  @@id(name: "id", fields: [activityId, gameNumber])
  @@map("games")
}

model GameDetail {
  activityId  Int      @map("activityId")
  gameNumber  Int      @map("game_number")
  courtNumber Int      @default(autoincrement()) @map("court_number")
  rule        Rule
  game        Game     @relation(fields: [activityId, gameNumber], references: [activityId, gameNumber])
  players     Player[]

  @@id(name: "id", fields: [activityId, gameNumber, courtNumber])
  @@map("game_details")
}

model Player {
  activityId    Int         @map("activityId")
  gameNumber    Int         @map("game_number")
  courtNumber   Int         @map("court_number")
  participantId Int         @map("participant_id")
  playerNumber  Int         @default(autoincrement()) @map("player_number")
  participant   Participant @relation(fields: [activityId, participantId], references: [activityId, memberId])
  gameDetail    GameDetail  @relation(fields: [activityId, gameNumber, courtNumber], references: [activityId, gameNumber, courtNumber])

  @@id(name: "id", fields: [activityId, gameNumber, courtNumber, participantId])
  @@map("players")
}

model Member {
  id           Int           @id @default(autoincrement())
  ownerId      String        @map("owner_id")
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")
  name         String
  kana         String?
  displayName  String?       @map("display_name")
  sex          Sex
  level        Level
  note         String?
  emojiUnicode String        @map("emoji_unicode")
  owner        User          @relation(fields: [ownerId], references: [id])
  participants Participant[]

  @@map("members")
}

model Place {
  id         Int        @id @default(autoincrement())
  ownerId    String     @map("owner_id")
  createdAt  DateTime   @default(now()) @map("createad_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")
  name       String
  courtCount Int        @map("court_count")
  owner      User       @relation(fields: [ownerId], references: [id])
  Activity   Activity[]

  @@map("places")
}

// the models below depend on the Prisma adapter for NextAuth.js.
// see https://authjs.dev/reference/adapter/prisma
// and do not put any domain model under this comment.
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refreshToken      String? @map("refresh_token") @db.Text
  accessToken       String? @map("access_token") @db.Text
  expiresAt         Int?    @map("expires_at")
  tokenType         String? @map("token_type")
  scope             String?
  idToken           String? @map("id_token") @db.Text
  sessionState      String? @map("session_state")
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  sessionToken String   @unique @map("session_token")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?  @map("email_verified")
  image         String?
  accounts      Account[]
  sessions      Session[]
  members       Member[]
  places        Place[]
  activities    Activity[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
